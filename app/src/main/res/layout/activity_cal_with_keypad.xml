<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalWithKeypadActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#898"
        android:id="@+id/txtwrite"
        android:textSize="50sp"
        android:textAlignment="textEnd"
        >
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/txtres"
        android:background="#898"
        android:text="0"
        android:textSize="50sp"
        android:textAlignment="textEnd"

        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn9"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/button_rectangle"
            android:text="9"
            android:onClick="ninebtn"
            android:textColor="#fff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn8"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/button_rectangle"
            android:text="8"
            android:onClick="eightbtn"
            android:textColor="#fff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn7"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/button_rectangle"
            android:text="7"
            android:onClick="sevenbtn"
            android:textColor="#fff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnADD"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/button_rectangle"
            android:text="+"
            android:onClick="addbtn"
            android:textColor="#fff"
            android:textSize="40sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="40sp"
            android:textColor="#fff"
            android:layout_weight="0.25"
            android:onClick="sixbtn"
            android:layout_margin="5dp"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="40sp"
            android:textColor="#fff"
            android:onClick="fivebtn"
            android:layout_weight="0.25"
            android:layout_margin="5dp"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="40sp"
            android:textColor="#fff"
            android:onClick="fourbtn"
            android:layout_weight="0.25"
            android:layout_margin="5dp"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnSUB"
            android:text="-"
            android:textSize="40sp"
            android:textColor="#fff"
            android:onClick="subbtn"
            android:layout_weight="0.25"
            android:layout_margin="5dp"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="40sp"
            android:textColor="#fff"
            android:onClick="threebtn"
            android:layout_margin="5dp"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="0.25"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="40sp"
            android:textColor="#fff"
            android:onClick="twobtn"
            android:layout_margin="5dp"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="0.25"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn1"
            android:text="1"
            android:textSize="40sp"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:onClick="onebtn"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="0.25"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnMUL"
            android:text="*"
            android:textSize="40sp"
            android:textColor="#fff"
            android:onClick="mulbtn"
            android:layout_weight="0.25"
            android:layout_margin="5dp"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnCLR"
            android:text="C"
            android:textSize="40sp"
            android:onClick="clrbtn"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:backgroundTint="#DB3D0C"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn0"
            android:text="0"
            android:textSize="40sp"
            android:textColor="#fff"
            android:onClick="zerobtn"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnEQL"
            android:text="="
            android:textSize="40sp"
            android:textColor="#fff"
            android:onClick="eqlbtn"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnDIV"
            android:text="/"
            android:textSize="40sp"
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:layout_weight="0.25"
            android:onClick="divbtn"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnback"
            android:text="del"
            android:textSize="40sp"
            android:onClick="backspacebtn"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:backgroundTint="#DB3D0C"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnpercent"
            android:text="%"
            android:textSize="40sp"
            android:textColor="#fff"

            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnsquare"
            android:text="^"
            android:textSize="40sp"
            android:textColor="#fff"

            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btndot"
            android:text="."
            android:textSize="50sp"
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:layout_weight="0.25"
            android:onClick="dotbtn"
            android:background="@drawable/button_rectangle"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

    </LinearLayout>

</LinearLayout>
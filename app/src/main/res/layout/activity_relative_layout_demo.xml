<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relpar"
    tools:context=".RelativeLayoutDemoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN FORM"
        android:textColor="#000"
        android:layout_marginBottom="20dp"
        android:id="@+id/txtheading"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER NAME"
        android:textColor="#E94513"
        android:id="@+id/txtusername"
        android:layout_below="@+id/txtheading"
        android:textSize="40sp"
        />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/edusername"
        android:background="#787"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/txtusername"
        android:layout_alignTop="@+id/txtusername"
        android:layout_alignParentRight="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#E94513"
        android:id="@+id/txtpass"
        android:layout_below="@+id/txtusername"
        android:textSize="40sp"
        />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/edpass"
        android:background="#787"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/edusername"
        android:layout_alignParentRight="true"

        />


</RelativeLayout>